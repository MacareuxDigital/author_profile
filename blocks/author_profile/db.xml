<?xml version="1.0" encoding="UTF-8"?>
<schema
  xmlns="http://www.concrete5.org/doctrine-xml/0.5"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.concrete5.org/doctrine-xml/0.5 http://concrete5.github.io/doctrine-xml/doctrine-xml-0.5.xsd">

  <table name="btAuthorProfile">
    <field name="bID" type="integer">
      <unsigned/>
      <key/>
    </field>
    <field name="displayBasicAttributes" type="boolean">
      <unsigned/>
      <default value="0"/>
      <notnull/>
    </field>
    <field name="displayProfileAttributes" type="boolean">
      <unsigned/>
      <default value="0"/>
      <notnull/>
    </field>
    <field name="displayMemberListAttributes" type="boolean">
      <unsigned/>
      <default value="0"/>
      <notnull/>
    </field>
    <field name="displayProfilePicture" type="boolean">
      <unsigned/>
      <default value="0"/>
      <notnull/>
    </field>
    <field name="linkToProfilePage" type="boolean">
      <unsigned/>
      <default value="0"/>
      <notnull/>
    </field>
    <field name="displayMode" type="string" size="1">
      <default value="S"/>
    </field>
    <field name="hideNotViewableUser" type="boolean">
      <unsigned/>
      <default value="0"/>
      <notnull/>
    </field>
    <field name="detailPage" type="integer">
      <unsigned/>
      <default value="0"/>
      <notnull/>
    </field>
  </table>

</schema>
